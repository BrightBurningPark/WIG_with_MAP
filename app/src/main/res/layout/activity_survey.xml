<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자의 여행 선호도를 조사하기 위한 설문입니다. 본 설문을 토대로 맞춤 여행지를 추천드립니다."
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="352dp"
        android:layout_height="406dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/q_important"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="국내와 해외 중 어디가 좋으신가요?" />

            <RadioGroup
                android:id="@+id/a_important"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/a_sleeping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="국내" />

                <RadioButton
                    android:id="@+id/a_hangout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="해외" />

            </RadioGroup>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/q_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="어떤 여행지가 좋으신가요?" />

            <RadioGroup
                android:id="@+id/a_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/a_nature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="경치가 아름다운 자연" />

                <RadioButton
                    android:id="@+id/a_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="북적이는 도심지" />

                <RadioButton
                    android:id="@+id/a_landmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="관광지로 유명한 랜드마크" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/q_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="특별히 좋아하는 기후가 있으신가요?" />

            <RadioGroup
                android:id="@+id/a_weather"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/a_hottemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="항상 따뜻하거나 더운 곳" />

                <RadioButton
                    android:id="@+id/a_midtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="항상 서늘하거나 추운 곳" />

                <RadioButton
                    android:id="@+id/a_coldtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="계절에 따라 날씨가 바뀌는 곳" />
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="확인" />

</LinearLayout>